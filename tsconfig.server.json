{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "isolatedModules": false,
        "esModuleInterop": true,
        "allowJs": false
    },
    "include": [
        "src/**/*",
        "data/**/*"
    ]
}